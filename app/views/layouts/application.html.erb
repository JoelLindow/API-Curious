<!DOCTYPE html>
<html>
  <head>
    <title>ApiCurious</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
    <%= link_to "Logout", logout_path, method: :delete %>
    <% else %>
    <%= link_to "Sign in with Github", github_login_path %>
    <% end %>

    <%= yield %>
  </body>
</html>
